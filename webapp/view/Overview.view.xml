<mvc:View controllerName="sap.training.exc.controller.Overview" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
    xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">

    <Page title="Customer" showNavButton="true" navButtonPress=".onNavButtonPress">
        <content>
            <Panel headerText="Customer Creation Form" expandable="true" expanded="true">
                <content>
                    <f:SimpleForm layout="ColumnLayout" editable="true">
                        <f:toolbar>
                            <Toolbar>
                                <content>
                                    <ToolbarSpacer />
                                    <Button text="Say Hello" press=".onSayHello" icon="sap-icon://globe" />
                                    <Button text="Create Customer" press=".onCreateCustomer" icon="sap-icon://create" />
                                </content>
                            </Toolbar>
                        </f:toolbar>

                        <f:content>
                            <core:Title text="General Data"></core:Title>
                            <Label text="Form" /><Input value="" />
                            <Label text="Customer Name" /><Input value="" />
                            <Label text="Discount" /><Input value="" />

                            <core:Title text="Address Data"></core:Title>
                            <Label text="Street" /><Input value="" />
                            <Label text="ZIP Code" /><Input value="" />
                            <Label text="City" /><Input value="" />
                            <Label text="Country" /><Input value="" placeholder="Country..." />

                            <core:Title text="Conact Data"></core:Title>
                            <Label text="E-Mail" /><Input value="" />
                            <Label text="Telephone" /><Input value="" />

                        </f:content>
                    </f:SimpleForm>
                </content>
            </Panel>
        </content>
    </Page>

</mvc:View>