<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog id="dialog" title="Info" type="Message">
        <content>
            <Text core:require="{formatMessage: 'sap/base/strings/formatMessage'}" text="{ parts: [ {path: 'i18n>dialogText'}, {path: 'customer>/CustomerName'} ],
formatter: 'formatMessage' }" />
        </content>
        <beginButton>
            <Button text="Ok" press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>